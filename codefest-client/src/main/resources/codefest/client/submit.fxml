<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import java.net.URL?>
<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="codefest.client.SubmitController"
      spacing="15">

    <stylesheets>
        <URL value="@main.css" />
    </stylesheets>

    <padding>
        <Insets topRightBottomLeft="10" />
    </padding>

    <VBox alignment="BOTTOM_LEFT" prefWidth="400" maxWidth="400" minWidth="400">
        <VBox maxHeight="Infinity" VBox.vgrow="ALWAYS">
            <Label fx:id="labelChallenge" text="Challenge info" />
        </VBox>

        <HBox>
            <Button text="Submit" onAction="#onSubmit" />
        </HBox>

        <TextArea fx:id="areaOutput" text="Server output" />
    </VBox>

    <TextArea fx:id="areaInput" text="Client input" maxWidth="Infinity" HBox.hgrow="ALWAYS" />

</HBox>
