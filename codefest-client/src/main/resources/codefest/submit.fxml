<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="codefest.SubmitController"
      spacing="15">

    <padding>
        <Insets topRightBottomLeft="10" />
    </padding>

    <VBox alignment="BOTTOM_LEFT" prefWidth="400" maxWidth="400" minWidth="400">
        <VBox maxHeight="Infinity" VBox.vgrow="ALWAYS">
            <Label text="Challenge info" />
        </VBox>

        <TextArea text="Server output" />
    </VBox>

    <TextArea text="Client input" maxWidth="Infinity" HBox.hgrow="ALWAYS" />

</HBox>
